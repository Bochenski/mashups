# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET	/hello					Application.sayHello
GET	/admin					Administration.index

# Venues
GET 	/venue					Venue.index
POST	/venue					Venue.create
GET	/venue/new				Venue.new
PUT	/venue/{id}				Venue.update(id)
DELETE	/venue/{id}				Venue.delete(id)
GET 	/venue/{id}				Venue.show(id)
GET 	/venue/{id}/edit			Venue.edit(id)

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
